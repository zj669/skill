# Novel-Generate 脚本环境变量配置
# 复制此文件到 scripts/.env 并根据实际环境修改

# ============================================================
# MySQL 配置
# ============================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=novel
MYSQL_PASSWORD=novel123
MYSQL_DATABASE=novel_db
MYSQL_CHARSET=utf8mb4

# ============================================================
# Redis 配置
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================
# Neo4j 配置
# ============================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=novel123

# ============================================================
# Milvus 配置
# ============================================================
MILVUS_HOST=localhost
MILVUS_PORT=19530

# ============================================================
# 嵌入模型配置
# ============================================================
# 选项: sentence-transformers, openai
EMBEDDING_PROVIDER=sentence-transformers

# Sentence Transformers 模型 (推荐使用中文模型)
EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5

# OpenAI 配置 (如果使用 openai provider)
# OPENAI_API_KEY=sk-xxx
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================================
# 应用配置
# ============================================================
DATA_DIR=./data
CHAR_CARDS_DIR=./data/char_cards
DRAFTS_DIR=./data/drafts
LOGS_DIR=./data/logs
DEFAULT_NOVEL_ID=novel_001
DEBUG=false
